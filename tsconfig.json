{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types/",
      "./@types/"
    ]
  },
  "include": [
    "./src/",
    "./@types/"
  ]
}
